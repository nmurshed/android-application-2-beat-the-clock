<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="BEAT the CLOCK"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:gravity="center"
        android:textStyle="normal|bold|italic"
        android:textSize="30sp"
        tools:fontFamily="cursive"/>

    <Button
        android:text="View Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/bscore"
        android:onClick="onclickbuttonsoptions"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:text="Continue to Next Round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bcontinue"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bscore"
        android:layout_alignStart="@+id/bscore"
        android:layout_alignRight="@+id/bscore"
        android:layout_alignEnd="@+id/bscore"
        android:onClick="onclickbuttonsoptions"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogout"
        android:layout_marginTop="30dp"
        tools:fontFamily="casual"
        android:onClick="onclickbuttonsoptions"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/bcontinue"
        android:layout_alignLeft="@+id/bcontinue"
        android:layout_alignStart="@+id/bcontinue" />

</RelativeLayout>